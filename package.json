{
  "name": "template-typescript",
  "version": "1.0.0",
  "description": "A template repository for TypeScript projects",
  "main": "index.js",
  "repository": "https://github.com/wimpyprogrammer/template-typescript",
  "author": "Drew Keller <drew@wimpyprogrammer.com>",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "npm run clean && babel src -d lib --extensions '.js,.ts' --ignore '**/*.spec.js','**/*.spec.ts'",
    "build-types": "tsc --emitDeclarationOnly",
    "clean": "rimraf lib/*",
    "lint": "tsc --noEmit && eslint . --ext .js,.ts --report-unused-disable-directives",
    "test": "jest --coverage"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^26.0.5",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "codecov": "^3.7.1",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "jest": "^26.6.3",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.9"
  }
}
