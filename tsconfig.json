{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"rootDir": "./",
		"lib": [],
		"module": "es2015",
		"noEmit": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"pretty": true,
		"skipLibCheck": true,
		"sourceMap": true
	},
	"include": ["src"]
}
